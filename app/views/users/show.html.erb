<div class="container" id="profile">
  <div class="row justify-content-around">
    <div class="col-3 card" id="settings-pannel">
      <div class="card-header">
        <h2>Settings</h2>
      </div>
      <div class="card-body">
        <div class="nav flex-column nav-pills navbar-fixed-top" id="v-pills-tab">
          <%= link_to "Profile", nil, class: "nav-link", data: { toggle: :pill, target: "#edit-user" }, role: :tab, "aria-controls": :notifications, "aria-selected": :false %>
          <%= link_to "Notifications", nil, class: "nav-link", data: { toggle: :pill, target: "#notifications" }, role: :tab, "aria-controls": :notifications, "aria-selected": :false %>
        </div>
      </div>
    </div>
    <div class="col-8 card">
      <div class="tab-content">
        <div class="tab-pane fade show active" id="edit-user">
          <%= render template: "devise/registrations/edit" %>
        </div>
        <div class="tab-pane fade" id="notifications">
          <%# render partial: "users/notifications" %>
        </div>
      </div>
    </div>
  </div>
</div>
