<div class="container mt-5">
  <% if @tv_shows.present? %>
    <% if params[:query].present? %>
      <h1 class="mb-3">Results</h1>
    <% else %>
      <h1 class="mb-3">Popular TV Shows</h1>
    <% end %>
    <div class="index-grid-container">
      <%= render partial: "tv_show", collection: @tv_shows, as: :tv_show %>
    </div>
  <% else %>
    <div class="row">
      <div class="no-results col-md-8 mx-auto"></div>
    </div>
  <% end %>
  <div class="float-right">
    <%= render partial: 'shared/pagy' %>
  </div>
</div>
